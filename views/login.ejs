                    <h3 class="mb-5">Đăng nhập</h3>
                    <div class="form-outline mb-4">
                      <input type="text" id="username" class="form-control form-control-lg myinput" placeholder="Tên đăng nhập" name="username"/>
                      <div class="erroruser"></div>
                    </div>
                    
                    <div class="form-outline mb-4">
                      <input type="password" id="password" class="form-control form-control-lg myinput"  placeholder="Mật khẩu" name='password' />
                      <div class="errorpassword"></div>
                    </div>
                   
                    <!-- Checkbox -->
                    <div class="form-check d-flex justify-content-start mb-4">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        value=""
                        id="form1Example3"
                      />
                      <label class="form-check-label" for="form1Example3"> Ghi nhớ tôi </label>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block submitslogin" type="submit" >Đăng nhập</button>
                    <hr class="my-4">
                    <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;" type="submit"><i class="fab fa-google me-2"></i> Đăng nhập bằng Google</button>
                    <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit"><i class="fab fa-facebook-f me-2"></i> Đăng nhập bằng Facebook</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
